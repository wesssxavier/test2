{
  "name": "styleai-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:watch:electron\" \"npm:start:electron\"",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint \"app/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:e2e": "playwright test",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node app/scripts/seed.ts",
    "watch:electron": "tsc -p tsconfig.electron.json --watch",
    "start:electron": "electron ."
  },
  "dependencies": {
    "@prisma/client": "^5.12.0",
    "electron": "^28.0.0",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "electron-ipc-extra": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "zustand": "^4.5.0",
    "zod": "^3.22.2",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "playwright": "^1.39.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prisma": "^5.12.0",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vitest": "^0.34.6",
    "jsdom": "^22.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/react-router-dom": "^5.3.3",
    "electron-builder": "^24.6.0",
    "@testing-library/jest-dom": "^6.1.5"
  },
  "build": {
    "appId": "com.styleai.desktop",
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}